<h1><%= link_to "" %></h1>
<h1><%= @todolist.title %></h1>
<ul class="todo_items">
	<% @todolist.todo_items.each do |todo_item| %>
	<li>
		<%= todo_item.content %>
		<%= link_to "Edit", edit_todolist_todo_item_path(todo_item) %>
		<%= link_to "Delete", todolist_todo_item_path(todo_item), method: :delete,
									data: { confirm: "Are You sure?" } %>
	</li>
	<% end %>
</ul>
<p>
<%= link_to "New Todo Item", new_todolist_todo_item_path %>
</p>