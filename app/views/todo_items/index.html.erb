<h1><%= @todolist.title %></h1>
<table class="todo_items">
	<% @todolist.todo_items.each do |todo_item| %>
	<tr id="<%= dom_id(todo_item) %>" >
		<td><%= todo_item.content %></td>
		<td>
			<%  if todo_item.completed_at.blank? %>
			<%= link_to "Mark Complete", complete_todolist_todo_item_path(todo_item), method: :patch %>
			<% else %>
			<%= todo_item.completed_at %>
			<% end %>
			<%= link_to "Edit", edit_todolist_todo_item_path(todo_item) %>
			<%= link_to "Delete", todolist_todo_item_path(todo_item), method: :delete,
									data: { confirm: "Are You sure?" } %></td>
	</tr>
	<% end %>
</table>
<p>
<%= link_to "New Todo Item", new_todolist_todo_item_path %>
</p>