<h1><%= @todolist.title %></h1>

 <h2><%= @todolist.description %></h2>

<% if @todolist.has_incomplete_items? %>
<h3>Incomplete Items:</h3>
<ul>
	<% @todolist.todo_items.incomplete.each do |todo_item| %>
	<li><%= todo_item.content %></li>
	<% end %>
</ul>
<% end %>

<% if @todolist.has_completed_items? %>
<h3>Completed Items:</h3>
<ul>
	<% @todolist.todo_items.complete.each do |todo_item| %>
	<li><%= todo_item.content %></li>
	<% end %>
</ul>
<% end %>

<%= link_to 'Edit', edit_todolist_path(@todolist) %> |
<%= link_to 'Back', todolists_path %>
